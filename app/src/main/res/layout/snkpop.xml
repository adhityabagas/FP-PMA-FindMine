<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00D33030">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:background="#F5DE0F"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="syarat dan ketentuan"
            android:textAlignment="center"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="      Postingan harus sesuai dengan yang tertulis dibawah \n
            1. Tidak boleh mengiklankan produk \n
            2. Barang yang ditemukan di tempatkan ke \n
            satpam atau ruang pengajaran \n
            3. Foto dan detail postingan tidak boleh \n
            mengandung unsur negatif dan harus jelas \n

            \n
    Apabila melanggar syarat dan ketentuan diatas\n
    maka akan dikenakan sanksi tegas"
            android:textSize="12dp" />

    </LinearLayout>
</RelativeLayout>